@model List<Gtfsstops>
@{
    ViewData["Title"] = "Default";
}
<div class="btn-group searchBar center-block">
    <input id="filterInput" class="form-control dropdown-toggle" onkeyup="filterMenu()" data-toggle="dropdown" placeholder="Search..." />
    <ul id="filterList" class="dropdown-menu pre-scrollable btn-block">
        @foreach (var item in Model)
        {
            <li>
                @* TODO: IS TRIP DIRECTION ID SAME AS STOP DIRECTION ID??????????????????? *@
                <a class="dropdown-item" href="@Url.Action("Index","Stops", new { stopName = item.StopName, directionId = item.StopDirectionId})">
                    @if (item.StopDirectionId == 1)
                    {
                        <img src="images/DirectionUp.png" height="40" width="40"/>
                    }
                    else
                    {
                        <img src="images/DirectionDown.png" height="40" width="40"/>
                    }
                    @item.StopName
                </a>
            </li>
        }
    </ul>
</div>