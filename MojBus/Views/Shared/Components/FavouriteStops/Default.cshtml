@model List<StopDataModel>
@{
    ViewData["Title"] = "Default";
    DateTime time = DateTime.Now;
}

@if (Model.Count() != 0)
{
    <div class="text-center">
        <h2>Priljubljene:</h2>
    </div>

    <div>
        @foreach (var item in Model)
        {
            @if (item != null)
            {
                <div class="flex-container">
                    <a class="btn btn-default btn-block departureDataContainer" href="@Url.Action("StopDataForRoute", "Stops", new { stopName = item.StopName, routeShortName = item.TripShortName, directionId = item.DirectionID })">
                        <div class="lineNumberContainer pull-left text-center">
                            <span>@item.TripShortName</span>
                            <div>
                                <span>@item.StopName</span>
                                @if (item.DirectionID == 1)
                                {
                                    <img class="searchBarArrowImage" src="~/images/directionUp.svg" />
                                }
                                else
                                {
                                    <img class="searchBarArrowImage" src="~/images/directionDown.svg" />
                                }
                            </div>                            
                        </div>

                        @{
                            IEnumerable<string> departureTimes = item.DepartureTimes.Where(x => (time.Hour <= Convert.ToInt32(x.Substring(0, 2)) && time.Minute <= Convert.ToInt32(x.Substring(3, 2))) || (time.Hour < Convert.ToInt32(x.Substring(0, 2)))).Take(10);
                            if (departureTimes.Count() == 0)
                            {
                                <span>Danes ne vozi vec!</span>
                            }
                            else
                            {
                                <div class="departureTime">
                                    @foreach (string departureTime in departureTimes)
                                    {
                                        <span>@departureTime</span>
                                    }
                                </div>

                            }
                        }
                    </a>
                    <div onclick="RemoveFavourite(this, '@item.StopName', '@item.TripShortName', '@item.DirectionID')" class="btn btn-default addToFavouritesButton">
                        <img class="favouritesStarImage" src="~/images/starRed.svg" />
                    </div>
                </div>
            }
        }
    </div>
}
