@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <h2>Registracija</h2>
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control emailLoginInput" placeholder="E-mail"/>
                <input asp-for="Password" class="form-control between" placeholder="Geslo"/>
                <input asp-for="ConfirmPassword" class="form-control passwordLoginInput" placeholder="Ponovi geslo"/>
            </div>
            <button type="submit" class="btn redButton">REGISTRACIJA</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
