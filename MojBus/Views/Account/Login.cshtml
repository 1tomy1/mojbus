@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h2>Prijava v aplikacijo</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control emailLoginInput" placeholder="E-mail" />
                    <input asp-for="Password" placeholder="Geslo" class="form-control passwordLoginInput" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn redButton">PRIJAVA</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">Pozabljeno geslo?</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registriraj se kot nov uporabnik?</a>
                    </p>
                </div>
            </form>
            <a class="btn btn-block btn-social btn-facebook">
                <span class="fab fa-facebook-f"></span> Prijava z računom Facebook
            </a>
            <a class="btn btn-block btn-social btn-google">
                <span class="fab fa-google"></span> Prijava z računom Google
            </a>
        </section>

        <span class="commentText">Opomba: nekatere funkcionalnosti prijave in prijavljenih uporabnikov so v razvoju in so onemogočene!</span>
    </div>
